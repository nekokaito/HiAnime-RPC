{
  "manifest_version": 3,
  "name": "HiAnime",
  "version": "1.0",
  "description": "HiAnime Discord RPC (nekokaito)",
  "permissions": ["tabs", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://hianime.to/*", "*://megacloud.blog/*"],
      "js": ["content.js"],
      "all_frames": true
    }
  ],
  "icons": {
    "16": "icon.ico",
    "32": "icon.ico",
    "48": "icon.ico",
    "128": "icon.ico"
  },
  "action": {
    "default_icon": {
      "16": "icon.ico",
      "32": "icon.ico",
      "48": "icon.ico",
      "128": "icon.ico"
    }
  }
}
